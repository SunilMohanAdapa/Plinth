#!/usr/bin/make -f
%:
	dh $@ --with python2

DATADIR=$(CURDIR)/debian/plinth/usr/share/plinth

override_dh_installinit:
	dh_installinit --onlyscripts

new-upstream:
	date=$$(date +%Y%m%d); \
	tgz=../plinth_0.4.1.orig.tar.gz; \
	wget -O $$tgz https://github.com/freedombox/Plinth/archive/v0.4.1.tar.gz; \
	git fetch https://github.com/freedombox/Plinth.git ; \
	vcstag=v0.4.1 ; \
	echo git-import-orig --pristine-tar --upstream-vcs-tag=$$vcstag $$tgz
